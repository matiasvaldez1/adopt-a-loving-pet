---
import type { PetType } from 'astro:db';

interface Props {
	type: string | null;
	types: (typeof PetType.$inferSelect)[];
}

const { type, types } = Astro.props;
---

<select class="flex-1" name="type">
	<option value="">Todos los tipos</option>
	{
		types.map((typeOption) => (
			<option value={typeOption.value} selected={type === typeOption.value ? 'true' : false}>
				{typeOption.title}
			</option>
		))
	}
</select>
